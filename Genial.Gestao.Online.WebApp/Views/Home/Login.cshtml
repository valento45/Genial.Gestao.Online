@using Genial.Gestao.Online.Domain.Models;
@model LoginViewModel

@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutSimples";
}
@section Styles{
    <link rel="stylesheet" href="~/css/login/login.css" />
}

<div class="login-page col-12">
    <div class="d-flex">
        <div class="col-8 description-home">
            <img class="logo_genial" src="~/imgs/genial_logo.png" />

            <p> Gerencie seu estoque e suas vendas com nosso PDV, e tenha um controle eficaz do negócio com gráficos e relatórios modernizados!</p>

        </div>
        <div class="col-4 form-home">

            <form asp-asp-controller="Home" asp-action="Logar" method="post">



                @if (!string.IsNullOrEmpty(Model?.Message))
                {
                    <div class="center-text container ">
                        <div class="message-warning">
                            <p class="text-semi-bold-orange">@Model.Message</p>
                        </div>
                    </div>
                }

                <div class="mt-2">
                    <h3>Entrar</h3>
                </div>

                <div class="form-outline mb-5 ag-field-content ">
                    <input asp-for="UserName" type="text" id="email-form" class="form-control ag-field-input ag-input-color-orange-full" autocomplete="off" required />
                    <label class="form-label ag-field-label" for="email-form">Usuário</label>
                </div>

                <div class="form-outline ag-field-content">
                    <input asp-for="Senha" type="password" class="form-control ag-field-input" id="password" required>
                    <label for="password" class="form-label ag-field-label">Senha</label>

                </div>

                <div class="col d-flex text-white">
                    <!-- Checkbox -->
                    <div class="form-check">
                        <label class="form-check-label" for="chkLembrarMe"> Lembrar-me </label>
                        <input asp-for="LembrarMe" class="form-check-input form-checkbox-input" type="checkbox" id="chkLembrarMe">

                    </div>
                </div>

                <div class="text-center mb-3">
                    <button type="submit" class="btn btn-outline-highlight">Entrar</button>
                </div>
                <div class="text-center">
                    <small class="text-white"> Não possuí cadastro? <a asp-controller="Usuario" asp-action="Cadastro" class="links">cadastre-se</a></small>
                </div>
            </form>
        </div>
    </div>

</div>
